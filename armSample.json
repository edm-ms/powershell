{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "metadata": {
                "Description": "Environment variable set from CI pipeline for tagging and resource naming",
                "Scope": "All templates"
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "Description": "Location variable set from CI pipeline for resource location deployments and resource naming",
                "Scope": "All templates"
            }
        },
        "appName": {
            "type": "string",
            "metadata": {
                "Description": "Application name variable set from CI pipeline for tagging and resource naming",
                "Scope": "All templates"
            }
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "https://accountname.blob.core.windows.net/",
            "metadata": {
                "Description": "Storage account base URI for linked template deployments",
                "Scope": "Deployment template"
            }
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "Description": "SAS Token for storage account access which is stored in key vault",
                "Scope": "Deployment template"
            }
        }
    },
    "variables": {
        "namingConventions": {
            "rgName": "[concat('rg-', parameters('appName'), '-', parameters('location'), '-', parameters('environment'))]",
            "vnetName": "[concat('vnet-', parameters('appName'), '-', parameters('location'), '-', parameters('environment'))]"
        },
        "linkedTemplates": {
            "aksURI": "[concat(parameters('_artifactsLocation'), parameters('appName'), '-', parameters('environment'), '/AKS/AKSCluster.json', parameters('_artifactsLocationSasToken'))]"
        }
    },
    "resources": [],
    "outputs": {}
}